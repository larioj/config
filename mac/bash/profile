testRelease() {
  sbt 'compile' && \
    sbt 'test:compile' && \
    sbt 'it:compile' && \
    sbt 'test' && \
    sbt 'scalastyle' && \
    sbt 'test:scalastyle' && \
    sbt 'it:scalastyle'
}
